<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    >
  <Panel
      class="sapUiNoContentPadding"
      >
    <headerToolbar>
      <OverflowToolbar
          design="Solid"
          height="5rem"
          >
        <content>
          <HBox
              alignItems="Center"
              height="100%"
              >
            <items>
              <l:VerticalLayout>
                <l:content>
                  <Title
                      class="sapUiSmallMarginBeginEnd"
                      text="{i18n>QuickLinks}"
                      textAlign="Begin"
                      level="H2"
                      titleStyle="H3"
                      />
                </l:content>
              </l:VerticalLayout>
            </items>
          </HBox>
        </content>
      </OverflowToolbar>
    </headerToolbar>
    <content>
      <List>
        <items>
          <StandardListItem
              icon="sap-icon://contacts"
              title="{i18n>UpdateRegistration}"
              description="Optional subtitle"
              />
          <StandardListItem
              icon="sap-icon://contacts"
              title="{i18n>ManageContracts}"
              description="Optional subtitle"
              />
          <StandardListItem
              icon="sap-icon://sales-quote"
              title="{i18n>CreateInvoice}"
              description="Optional subtitle"
              />
        </items>
      </List>
    </content>
  </Panel>
</core:FragmentDefinition>
