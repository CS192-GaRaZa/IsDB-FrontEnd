<mvc:View
	controllerName="cmsfrontend.controller.admin.Admin"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Panel class="sapUiDemoFlexBoxSizeAdjustments">
		<FlexBox
			class="sapUiDemoFlexBoxSizeAdjustmentsZeroWidthItems"
			alignItems="Start">
			<items>
				
				<Text text="Admin Panel"  width="100%" type="Reject" class="sapUiSmallMarginEnd">
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</Text>
				<Button text="Create Project" press="goToCreateProject" width="50%" type="Emphasized" >
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</Button>
			</items>
		</FlexBox>
	</Panel>
	
	<Table id="idOpenProjects"
		inset="false"
		items="{
			path: '/open_projects'
		}">
		<headerToolbar>
			<Toolbar>
				<Title text="Open Projects" level="H2"/>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column
				width="20em">
				<Text text="Project Name" />
			</Column>
			<Column
				width="8em"
				minScreenWidth="Tablet"
				demandPopin="true">
				<Text text="Location" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				>
				<Text text="Estimated Inputs" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				>
				<Text text="Selection Method" />
			</Column>
			<Column> 
				<Text text="Consultant Type" />
			</Column>
			<Column> 
				<Text text="Assignment Type" />
			</Column>
			<Column> 
				<Text text="Department" />
			</Column>
			<Column> 
				<Text text="Division" />
			</Column>
			<Column> 
				<Text text="Budget" />
			</Column>
			<Column> 
				<Text text="Deadline" />
			</Column>
			<Column> 
				<Text text="EOI" />
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Link
						text="{project_name}"
						href="{ProductPicUrl}" />
					<Text
						text="{location}" />
					<Text
						text="{estimated_inputs}" />
					<Text
						text="{selection_method}" />
					<Text
						text="{consultant_type}" />
					<Text
						text="{assignment_type}" />
					<Text
						text="{department}" />
					<Text
						text="{division}" />
					<Text
						text="{budget}" />
					<Text
						text="{deadline_for_submission}" />
					<Link
						text="See EOI"
						href="/#/project-eoi/{id}" />
				</cells>
			</ColumnListItem>
		</items>
	</Table>

	<Table id="idOngoingProjects"
		inset="false"
		items="{
			path: '/ongoing_projects'
		}">
		<headerToolbar>
			<Toolbar>
				<Title text="Ongoing Projects" level="H2"/>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column
				width="20em">
				<Text text="Project Name" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<Text text="Location" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				width="8em"
				>
				<Text text="Consultant Type" />
			</Column>
			
			<Column width="8em"> 
				<Text text="Team Leader" />
			</Column>
			<Column width="8em"> 
				<Text text="Budget" />
			</Column>
			<Column width="8em"> 
				<Text text="Consultants" />
			</Column>
			<Column>
				<Text text="See Other EOI"></Text>
			</Column>
			<Column>
				<Text text="Actions"></Text>
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Link
						text="{project_name}"
						href="{ProductPicUrl}" 
						width="20em" />
					<Text
						text="{location}" 
						width="8em"/>
					<Text
						text="{consultant_type}" 
						width="8em"/>
					<Text
						text="{team_leader}" 
						width="8em"/>
					<Text
						text="{budget}" 
						width="8em"/>
					<Link
						text="See Consultants"
						href="/#/accepted-project/{id}" 
						width="8em"/>
					<Link
						text="See EOI"
						href="/#/project-eoi/{id}" 
						width="8em"/>
					<HBox> 
						<items>
							<Button text="Done" app:id="{id}" type="Accept" press="projectDone" class="sapUiTinyMarginBeginEnd" />
						</items>
					</HBox>
				</cells>
			</ColumnListItem>
		</items>
	</Table>

	<Table id="idDoneProjects"
		inset="false"
		items="{
			path: '/done_projects'
		}">
		<headerToolbar>
			<Toolbar>
				<Title text="Done Projects" level="H2"/>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column
				width="20em">
				<Text text="Project Name" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<Text text="Complex" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<Text text="Location" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				width="8em"
				>
				<Text text="Consultant Type" />
			</Column>
			
			<Column width="8em"> 
				<Text text="Team Leader" />
			</Column>
			<Column width="8em"> 
				<Text text="Budget" />
			</Column>
			<Column width="8em"> 
				<Text text="Consultants" />
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Link
						text="{project_name}"
						href="{ProductPicUrl}" 
						width="20em" />
					<Text
						text="{complex}" 
						width="20em"/>
					<Text
						text="{location}" 
						width="5em"/>
					
					<Text
						text="{consultant_type}" 
						width="8em"/>
					<Text
						text="{team_leader}" 
						width="8em"/>
					<Text
						text="{budget}" 
						width="8em"/>
					<Link
						text="See Consultants"
						href="/#/accepted-project/{id}" 
						width="8em"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>

