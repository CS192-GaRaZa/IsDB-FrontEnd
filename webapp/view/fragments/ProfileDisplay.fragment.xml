<core:FragmentDefinition
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:uxap="sap.uxap"
	xmlns:html="http://www.w3.org/1999/xhtml">

	<uxap:ObjectPageLayout
		id="objectPageLayoutDisplay"
		upperCaseAnchorBar="false"
		alwaysShowContentHeader="false"
		showAnchorBarPopover="false"
		useIconTabBar="true"
		navigate="trackSelectedSection">

		<uxap:headerTitle>
			<uxap:ObjectPageHeader
				objectTitle="{
					parts: [
						{ path: '/surname' },
						{ path: '/given_name' },
						{ path: '/middle_name' }
					],
					formatter: '.formatSurname'
					}"
				objectSubtitle="{/unique_id}" />
		</uxap:headerTitle>
		<uxap:headerContent>
			<Image
				src="img/testIMG.jpg"
				width="150px"
				height="150px" />
			<VBox width="80%">
				<HBox>
					<Label text="Type: " />
					<Text text="{/kind}" />
				</HBox>

				<!-- I'm using these empty labels to add spacing between the entries.
					Is there a better way? -->

				<HBox>
					<Label text="Date of Birth: " />
					<Text text="{
								path: '/date_of_birth',
								type: 'sap.ui.model.type.Date',
								formatOptions: { style: 'long' }
								}"
							/>
				</HBox>
				<HBox>
					<Label text="Citizenship: " />
					<Text text="{/citizenship}" />
				</HBox>
				<HBox wrap="Wrap">
					<Label text="Summary:" />
					<Text text="{/description}" />
				</HBox>

			</VBox>
		</uxap:headerContent>
		<uxap:sections>
			<uxap:ObjectPageSection
				id="displayProfileSection"
				title="Profile"
				titleUppercase="false">
				<uxap:subSections>
					<uxap:ObjectPageSubSection
						titleUppercase="false"
						mode="Expanded"
						class="editableForm"
						editable="true">
						<uxap:blocks>
							<VBox>
								<f:SimpleForm
									editable="false"
									layout="ResponsiveGridLayout"
									labelSpanL="12"
									labelSpanM="12"
									labelSpanS="12"
									adjustLabelSpan="false"
									emptySpanL="0"
									columnsL="3">
									<f:content>
										<core:Title />
										<Label text="Surname" />
										<Text text="{/surname}" />
										<Label text="Type" />
										<Text text="{/kind}" />
										<Label text="Gender" />
										<Text text="{/gender}" />
										<Label text="LinkedIn Profile" />
										<Text text="{/linkedin}" />
										<core:Title />
										<Label text="Given Name" />
										<Text text="{/given_name}" />
										<Label text="Date of Birth" />
										<Text text="{
													path: '/date_of_birth',
													type: 'sap.ui.model.type.Date',
													formatOptions: { style: 'long' }
													}"
												/>
										<core:Title />
										<Label text="Middle Name" />
										<Text text="{/middle_name}" />
										<Label text="Citizenship" />
										<Text text="{/citizenship}" />
									</f:content>
								</f:SimpleForm>

								<Label text="Summary:" />
								<Text text="{/description}" />

								<Label />
								<Label />
								<Label />

								<f:SimpleForm
									title="Consulting Background"
									editable="false"
									layout="ResponsiveGridLayout"
									labelSpanL="12"
									labelSpanM="12"
									labelSpanS="12"
									adjustLabelSpan="false"
									emptySpanL="0"
									columnsL="3">
									<f:content>
										<core:Title />
										<Label text="Sectors" />
										<Text text="{/sector_list}" />
										<Label text="Previously Engaged by IsDB" />
										<Text text="{/previously_engaged_with_isdb}" />
										<core:Title />
										<Label text="Expertise" />
										<Text text="{/expertise_list}" />
										<Label text="Details on previous IsDB Engagement" />
										<Text text="{/previous_isdb_project_details}" />
										<core:Title />
										<Label text="Countries of Work Experience" />
										<Text text="{/countries_of_work_experience}" />
									</f:content>
								</f:SimpleForm>

								<Label />
								<Label />
								<Label />

								<f:SimpleForm
									title="Education"
									editable="false"
									layout="ResponsiveGridLayout"
									labelSpanL="12"
									labelSpanM="12"
									labelSpanS="12"
									adjustLabelSpan="false"
									emptySpanL="0"
									columnsL="1"
									singleContainerFullSize="false">
									<f:content>
										<core:Title />
										<Table
											inset="false"
											items="{/educations}">
											<headerToolbar>
												<Toolbar>
													<ToolbarSpacer />
												</Toolbar>
											</headerToolbar>
											<columns>
												<Column width="auto">
													<Text text="Program" />
												</Column>
												<Column
													minScreenWidth="Tablet"
													demandPopin="true"
													width="20%">
													<Text text="Degree" />
												</Column>
												<Column>
													<Text text="School" />
												</Column>
											</columns>
											<items>
												<ColumnListItem>
													<cells>
														<Text text="{degree}" />
														<Text text="{level}" />
														<Text text="{school}" />
													</cells>
												</ColumnListItem>
											</items>
										</Table>
									</f:content>
								</f:SimpleForm>

								<Label />
								<Label />
								<Label />

								<f:SimpleForm
									title="Professional"
									editable="false"
									layout="ResponsiveGridLayout"
									labelSpanL="12"
									labelSpanM="12"
									labelSpanS="12"
									adjustLabelSpan="false"
									emptySpanL="0"
									columnsL="2">
									<f:content>
										<core:Title />
										<Label text="Membership/License" />
										<Text text="{/membership_license}" />
										<Label text="Trainings" />
										<Text text="{/trainings}" />
										<core:Title />
										<Label text="Languages" />
										<Text text="{/languages}" />
									</f:content>
								</f:SimpleForm>



								<Label />
								<Label />
								<Label />

								<f:SimpleForm
									title="Contact"
									editable="false"
									layout="ResponsiveGridLayout"
									labelSpanL="12"
									labelSpanM="12"
									labelSpanS="12"
									adjustLabelSpan="false"
									emptySpanL="0"
									columnsL="3">
									<f:content>
										<core:Title />
										<Text text="Permanent Address" />
										<Label text="Street" />
										<Text text="{/perm_street}" />
										<Label text="City" />
										<Text text="{/perm_city}" />
										<Label text="Zip Code" />
										<Text text="{/perm_zipcode}" />
										<Label text="State/Province" />
										<Text text="{/perm_state}" />
										<Label text="Country" />
										<Text text="{/perm_country}" />
										<core:Title />
										<Text text="Mailing Address" />
										<Label text="Street" />
										<Text text="{/mail_street}" />
										<Label text="City" />
										<Text text="{/mail_city}" />
										<Label text="Zip Code" />
										<Text text="{/mail_zipcode}" />
										<Label text="State/Province" />
										<Text text="{/mail_state}" />
										<Label text="Country" />
										<Text text="{/mail_country}" />
										<core:Title />
										<Text text="Email and Phone" />
										<Label text="Email" />
										<Text text="{/email}" />
										<Label text="Phone" />
										<Text text="{/phone_number}" />
										<Label text="Mobile" />
										<Text text="{/mobile_number}" />
										<Label text="Skype ID" />
										<Text text="{/skype_id}" />
									</f:content>
								</f:SimpleForm>
							</VBox>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
		</uxap:sections>
		<uxap:sections>
			<uxap:ObjectPageSection
				id="displayEmploymentSection"
				title="Employment"
				titleUppercase="false">
				<uxap:subSections>
					<uxap:ObjectPageSubSection
						titleUppercase="false"
						mode="Expanded"
						class="editableForm"
						editable="true">
						<uxap:blocks>
							<VBox>
								<f:SimpleForm
									editable="false"
									layout="ResponsiveGridLayout"
									labelSpanL="12"
									labelSpanM="12"
									labelSpanS="12"
									adjustLabelSpan="false"
									emptySpanL="0"
									columnsL="3">
									<f:content>
										<core:Title />
										<Label text="Former IsDB Employee" />
										<Text text="{/former_isdb_employee}" />
										<core:Title />
										<Label text="Employee ID" />
										<Text text="{/employee_id}" />
										<core:Title />
										<Label text="Date Cleared for Consulting" />
										<Text text="{
													path: '/date_cleared_consulting',
													type: 'sap.ui.model.type.Date',
													formatOptions: { style: 'long' }
													}"
												/>
									</f:content>
								</f:SimpleForm>
								<Table
									inset="false"
									items="{/employments}">
									<headerToolbar>
										<Toolbar>
											<Title
												text="Employment"
												level="H2" />
										</Toolbar>
									</headerToolbar>
									<columns>
										<Column width="auto">
											<Text text="Employer" />
										</Column>
										<Column
											minScreenWidth="Tablet"
											demandPopin="true"
											hAlign="Left"
											width="10%">
											<Text text="From" />
										</Column>
										<Column
											minScreenWidth="Tablet"
											demandPopin="true"
											hAlign="Left"
											width="10%">
											<Text text="To" />
										</Column>
										<Column
											minScreenWidth="Tablet"
											demandPopin="true"
											hAlign="Left"
											width="20%">
											<Text text="Position Held" />
										</Column>
										<Column
											hAlign="Left"
											width="auto">
											<Text text="Main Responsibilities" />
										</Column>
									</columns>
									<items>
										<ColumnListItem>
											<cells>
												<ObjectIdentifier title="{employer}" />
												<Text text="{
															path: 'from',
															type: 'sap.ui.model.type.Date',
															formatOptions: { style: 'medium' }
															}"
														/>
												<Text text="{
															path: 'to',
															type: 'sap.ui.model.type.Date',
															formatOptions: { style: 'medium' }
															}"
														/>
												<Text text="{position_held}" />
												<Text text="{main_responsibilities}" />
											</cells>
										</ColumnListItem>
									</items>
								</Table>
							</VBox>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
		</uxap:sections>
		<uxap:sections>
			<uxap:ObjectPageSection
				id="displayAssignmentsSection"
				title="Assignments"
				titleUppercase="false">
				<uxap:subSections>
					<uxap:ObjectPageSubSection
						titleUppercase="false"
						mode="Expanded"
						class="editableForm"
						editable="true">
						<uxap:blocks>
							<VBox>
								<Table
									inset="false"
									items="{/assignments}">
									<headerToolbar>
										<Toolbar>
											<Title
												text="Assignments"
												level="H2" />
										</Toolbar>
									</headerToolbar>
									<columns>
										<Column width="auto" />
									</columns>
									<items>
										<ColumnListItem>
											<cells>
												<VBox>
													<ObjectIdentifier title="{title}" />
													<Label />
													<Label text="Description:" />
													<Text text="{description}" />
													<Label />
													<Label text="Role:" />
													<Text text="{role}" />
												</VBox>
											</cells>
										</ColumnListItem>
									</items>
								</Table>
							</VBox>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
		</uxap:sections>
	</uxap:ObjectPageLayout>
</core:FragmentDefinition>
