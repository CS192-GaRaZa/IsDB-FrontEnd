
<mvc:View
    controllerName="cmsfrontend.controller.consultant.SignUp"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    >
  <Page
      title="{i18n>Consultant} â€” {i18n>SignUp}"
      >
    <content>
      <VBox
          class="center-control"
          justifyContent="Center"
          width="300px"
          >
        <items>
          <f:Form>
            <f:layout>
              <f:ResponsiveGridLayout backgroundDesign="Transparent" />
            </f:layout>
            <f:formContainers>
              <f:FormContainer>
                <f:formElements>
                  <f:FormElement>
                    <f:fields>
                      <Input
                          id="idGivenName"
                          type="Text"
                          value="{
                            path: '/user/given_name',
                            type: 'sap.ui.model.type.String',
                            constraints: {
                              minLength: 1
                            }
                          }"
                          placeholder="{i18n>GivenName}"
                          valueStateText="Given name must not be empty."
                          />
                    </f:fields>
                  </f:FormElement>
                  <f:FormElement>
                    <f:fields>
                      <Input
                          id="idSurname"
                          type="Text"
                          value="{
                            path: '/user/surname',
                            type: 'sap.ui.model.type.String',
                            constraints: {
                              minLength: 1
                            }
                          }"
                          placeholder="{i18n>Surname}"
                          valueStateText="Surname must not be empty."
                          />
                    </f:fields>
                  </f:FormElement>
                  <f:FormElement>
                    <f:fields>
                      <Input
                          id="idEmail"
                          type="Email"
                          value="{
                            path: '/user/email',
                            type: '.type.Email'
                          }"
                          placeholder="{i18n>Email}"
                          valueStateText="Email must be a valid email address."
                          />
                    </f:fields>
                  </f:FormElement>
                  <f:FormElement>
                    <f:fields>
                      <Input
                          id="idPassword"
                          type="Password"
                          value="{
                            path: '/user/password',
                            type: 'sap.ui.model.type.String',
                            constraints: {
                              minLength: 6
                            }
                          }"
                          placeholder="{i18n>Password}"
                          valueStateText="Password must be longer than 6 characters."
                          />
                    </f:fields>
                  </f:FormElement>
                  <f:FormElement>
                    <f:fields>
                      <Button
                          type="Default"
                          text="{i18n>Confirm}"
                          press="onPressConfirm"
                          />
                    </f:fields>
                  </f:FormElement>
                </f:formElements>
              </f:FormContainer>
            </f:formContainers>
          </f:Form>
        </items>
      </VBox>
    </content>
  </Page>
</mvc:View>
