<!-- Format: width of input and select boxes links (like the linked in or
	email) -->

<core:FragmentDefinition
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:uxap="sap.uxap"
	xmlns:unified="sap.ui.unified"
	xmlns:html="http://www.w3.org/1999/xhtml">

	<uxap:ObjectPageLayout
		id="objectPageLayoutEdit"
		upperCaseAnchorBar="false"
		alwaysShowContentHeader="false"
		showAnchorBarPopover="false"
		useIconTabBar="true"
		navigate="trackSelectedSection">

		<uxap:headerTitle>
			<uxap:ObjectPageHeader
				objectTitle="{
					parts: [
						{ path: '/surname' },
						{ path: '/given_name' },
						{ path: '/middle_name' }
					],
					formatter: '.formatter.fullname'
					}"
				objectSubtitle="{/unique_id}" />
		</uxap:headerTitle>
		<uxap:headerContent>
			<Image
					width="150px"
					height="150px"
					src="{
						path: '/image_url',
						formatter: '.formatter.profileImageURL'
						}"
					/>
			<VBox width="80%">
				<HBox>
					<Label text="Type: " />
					<ToolbarSpacer width="3px"/>
					<Text text="{/kind}" />
				</HBox>

				<!-- I'm using these empty labels to add spacing between the entries.
					Is there a better way? -->

				<HBox>
					<Label text="Date of Birth: " />
					<ToolbarSpacer width="3px"/>
					<Text
							text="{
								path: '/date_of_birth',
								type: '.type.Date'
								}"
							/>
				</HBox>
				<HBox>
					<Label text="Citizenship: " />
					<ToolbarSpacer width="3px"/>
					<Text text="{/citizenship}" />
				</HBox>
				<HBox wrap="Wrap">
					<Label text="Summary: " />
					<ToolbarSpacer width="3px"/>
					<Text text="{/description}" />
				</HBox>
				<unified:FileUploader
						uploadUrl="/upload"
                        uploadOnChange="true"
						name="file"
						id="idProfileImageUploader"
						buttonText="Browse"
                        uploadComplete="onProfileImageUploaderComplete"
						/>

			</VBox>
		</uxap:headerContent>
		<uxap:sections>
			<uxap:ObjectPageSection
				id="editProfileSection"
				title="Profile"
				titleUppercase="false">
				<uxap:subSections>
					<uxap:ObjectPageSubSection
						titleUppercase="false"
						mode="Expanded"
						class="editableForm"
						editable="true">
						<uxap:blocks>
							<VBox>
								<f:SimpleForm
									editable="false"
									layout="ResponsiveGridLayout"
									labelSpanL="12"
									labelSpanM="12"
									labelSpanS="12"
									adjustLabelSpan="false"
									emptySpanL="0"
									columnsL="3">
									<f:content>
										<core:Title />
										<Label text="Surname" />
										<Input value="{/surname}" />
										<Label text="Type" />
										<Select
											id="kindSelect"
											width="100%"
											value="{/kind}"
											path="{/kind}">
											<items>
												<core:Item text="Consultant Type 1" />
												<core:Item text="Consultant Type 2" />
												<core:Item text="Consultant Type 3" />
											</items>
										</Select>
										<Label text="Gender" />
										<Select
											id="genderSelect"
											width="auto"
											value="{/gender}"
											path="{/gender}">

											<core:Item text="Male" />
											<core:Item text="Female" />

											<layoutData>
												<l:GridData span="L4 M4 S4" />
											</layoutData>
										</Select>
										<core:Title />
										<Label text="Given Name" />
										<Input value="{/given_name}" />
										<Label text="Date of Birth" />
										<DatePicker
												value="{
													path: '/date_of_birth',
													type: '.type.Date'
													}"
												/>
										<Label text="LinkedIn Profile" />
										<Input value="{/linkedin}" />
										<core:Title />
										<Label text="Middle Name" />
										<Input value="{/middle_name}" />
										<Label text="Citizenship" />
										<MultiComboBox
											id="CitizenshipComboBox"
											selectionFinish="handleSelectionFinishCitizenship"
											width="auto"
											items="{
												path:'countryModel>/',
												sorter:{path:'name'}
											}">
											<core:Item key="{countryModel>name}" text="{countryModel>name}" />
										</MultiComboBox>
									</f:content>
								</f:SimpleForm>

								<Label text="Summary:" />
								<TextArea
									width="100%"
									growing="true"
									value="{/description}" />

								<Label />

								<f:SimpleForm
									title="Consulting Background"
									editable="false"
									layout="ResponsiveGridLayout"
									labelSpanL="12"
									labelSpanM="12"
									labelSpanS="12"
									adjustLabelSpan="false"
									emptySpanL="0"
									columnsL="3">
									<f:content>
										<core:Title />
										<Label text="Sector" />
										<Input value="{/sector_list}" />
										<Label text="Previously Engaged by IsDB" />
										<Select
											id="prevEngagedSelect"
											width="auto"
											value="{/previously_engaged_with_isdb}"
											path="{/previously_engaged_with_isdb}">
											<items>
												<core:Item text="Yes" />
												<core:Item text="No" />
											</items>
											<layoutData>
												<l:GridData span="L4 M4 S4" />
											</layoutData>
										</Select>
										<core:Title />
										<Label text="Expertise" />
										<Input value="{/expertise_list}" />
										<Label text="Countries of Work Experience" />
										<MultiComboBox
											id="CountriesWorkExperienceComboBox"
											selectionFinish="handleSelectionFinishWorkExperience"
											width="auto"
											items="{
												path:'countryModel>/',
												sorter:{path:'name'}
											}">
											<core:Item key="{countryModel>name}" text="{countryModel>name}" />
										</MultiComboBox>
										<core:Title />
										<Label text="Countries of Work Experience" />
										<Label text="Details on previous IsDB Engagement" />
										<TextArea
											width="100%"
											growing="true"
											value="{/previous_isdb_project_details}" />
									</f:content>
								</f:SimpleForm>

								<Label />

								<f:SimpleForm
									title="Education"
									editable="false"
									layout="ResponsiveGridLayout"
									labelSpanL="12"
									labelSpanM="12"
									labelSpanS="12"
									adjustLabelSpan="false"
									emptySpanL="0"
									columnsL="1"
									singleContainerFullSize="false">
									<f:content>
										<Table
											inset="false"
											items="{/educations}"
											mode="Delete"
											delete="handleDeletePressEducation">
											<headerToolbar>
												<Toolbar>
													<ToolbarSpacer />
													<Button
														text="Add Entry"
														press="addRowEducation" />
												</Toolbar>
											</headerToolbar>
											<columns>
												<Column width="auto">
													<Text text="Program" />
												</Column>
												<Column>
													<Text text="Degree" />
												</Column>
												<Column>
													<Text text="Institution" />
												</Column>
												<Column>
													<Text text="Country" />
												</Column>
												<Column>
													<Text text="Date of Completion" />
												</Column>
											</columns>
											<items>
												<ColumnListItem>
													<cells>
														<Input value="{program}" />
														<Select
															id="degreeSelect"
															width="auto"
															value="{degree}"
															path="{degree}">
															<items>
																<core:Item text="Certificate" />
																<core:Item text="Diploma" />
																<core:Item text="Associate Degree" />
																<core:Item text="Bachelor" />
																<core:Item text="Master" />
																<core:Item text="Doctorate" />
															</items>
														</Select>
														<Input value="{institution}" />
														<Select
														  id="educationCountrySelect"
									                      value="{country}"
									                      change="handleEducationCountryChange"
									                      forceSelection="false"
									                      items="{countryModel>/}">
									                      <items>
									                        <core:Item key="{countryModel>name}" text="{countryModel>name}" />
									                      </items>
									                    </Select>
									                    <Input value="March" />
													</cells>
												</ColumnListItem>
											</items>
										</Table>
									</f:content>
								</f:SimpleForm>

								<Label />

								<f:SimpleForm
									title="Professional"
									editable="false"
									layout="ResponsiveGridLayout"
									labelSpanL="12"
									labelSpanM="12"
									labelSpanS="12"
									adjustLabelSpan="false"
									emptySpanL="0"
									columnsL="2">
									<f:content>
										<core:Title />
										<Label text="Membership/License" />
										<TextArea
											width="100%"
											growing="true"
											value="{/membership_license}">
											<layoutData>
												<l:GridData span="L8 M8 S8" />
											</layoutData>
										</TextArea>
										<Label text="Trainings" />
										<TextArea
											width="100%"
											growing="true"
											value="{/trainings}">
											<layoutData>
												<l:GridData span="L8 M8 S8" />
											</layoutData>
										</TextArea>
										<core:Title />
										<Label text="Languages" />
										<TextArea
											width="100%"
											growing="true"
											value="{/languages}">
											<layoutData>
												<l:GridData span="L8 M8 S8" />
											</layoutData>
										</TextArea>
									</f:content>
								</f:SimpleForm>


								<Label />

								<f:SimpleForm
									title="Contact"
									editable="false"
									layout="ResponsiveGridLayout"
									labelSpanL="12"
									labelSpanM="12"
									labelSpanS="12"
									adjustLabelSpan="false"
									emptySpanL="0"
									columnsL="3">
									<f:content>
										<core:Title />
										<Title text="Permanent Address" />
										<Label text="Street" />
										<Input value="{/perm_street}" />
										<Label text="City" />
										<Input value="{/perm_city}" />
										<Label text="Zip Code" />
										<Input value="{/perm_zipcode}" />
										<Label text="State/Province" />
										<Input value="{/perm_state}" />
										<Label text="Country" />
										<Select
										  id="PermCountrySelectConsultant"
					                      value="{/perm_country}"
					                      change="handlePermCountryChange"
					                      forceSelection="false"
					                      items="{countryModel>/}">
					                      <items>
					                        <core:Item key="{countryModel>name}" text="{countryModel>name}" />
					                      </items>
					                    </Select>
										<core:Title />
										<Title text="Mailing Address" />
										<Label text="Street" />
										<Input value="{/mail_street}" />
										<Label text="City" />
										<Input value="{/mail_city}" />
										<Label text="Zip Code" />
										<Input value="{/mail_zipcode}" />
										<Label text="State/Province" />
										<Input value="{/mail_state}" />
										<Label text="Country" />
										<Select
										  id="MailCountrySelectConsultant"
					                      value="{/mail_country}"
					                      change="handleMailCountryChange"
					                      forceSelection="false"
					                      items="{countryModel>/}">
					                      <items>
					                        <core:Item key="{countryModel>name}" text="{countryModel>name}" />
					                      </items>
					                    </Select>
										<core:Title />
										<Title text="Email and Phone" />
										<Label text="Email" />
										<Input value="{/email}" />
										<Label text="Phone" />
										<Input value="{/phone_number}" />
										<Label text="Mobile" />
										<Input value="{/mobile_number}" />
										<Label text="Skype ID" />
										<Input value="{/skype_id}" />
									</f:content>
								</f:SimpleForm>
							</VBox>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
		</uxap:sections>
		<uxap:sections>
			<uxap:ObjectPageSection
				id="editEmploymentSection"
				title="Employment"
				titleUppercase="false">
				<uxap:subSections>
					<uxap:ObjectPageSubSection
						titleUppercase="false"
						mode="Expanded"
						class="editableForm"
						editable="true">
						<uxap:blocks>
							<VBox>
								<f:SimpleForm
									editable="false"
									layout="ResponsiveGridLayout"
									labelSpanL="12"
									labelSpanM="12"
									labelSpanS="12"
									adjustLabelSpan="false"
									emptySpanL="0"
									columnsL="6">
									<f:content>
										<core:Title />
										<Label text="Former IsDB Employee" />
										<Select
											id="formerEmployeeSelect"
											width="auto"
											value="{/former_isdb_employee}"
											path="{/former_isdb_employee}">
											<items>
												<core:Item text="Yes" />
												<core:Item text="No" />
											</items>
											<layoutData>
												<l:GridData span="L8 M8 S8" />
											</layoutData>
										</Select>
										<Label text="Years of Work Experience" />
										<Input text="{/years_of_work_experience}"> 
											<layoutData>
												<l:GridData span="L8 M8 S8" />
											</layoutData>
										</Input>
										<core:Title />
										<Label text="Employee ID" />
										<Input value="{/employee_id}">
											<layoutData>
												<l:GridData span="L8 M8 S8" />
											</layoutData>
										</Input>
										<core:Title />
										<Label text="Date Cleared for Consulting" />
										<DatePicker
												value="{
													path: '/date_cleared_consulting',
													type: '.type.Date'
													}
												">
											<layoutData>
												<l:GridData span="L8 M8 S8" />
											</layoutData>
										</DatePicker>
									</f:content>
								</f:SimpleForm>
								<Table
									inset="false"
									items="{/employments}"
									mode="Delete"
									delete="handleDeletePressEmployment">
									<headerToolbar>
										<Toolbar>
											<Title
												text="Employment"
												level="H2" />
											<ToolbarSpacer />
											<Button
												text="Add Entry"
												press="addRowEmployment" />
										</Toolbar>
									</headerToolbar>
									<columns>
										<Column width="auto">
											<Text text="Employer" />
										</Column>
										<Column
											minScreenWidth="Tablet"
											demandPopin="true"
											hAlign="Left"
											width="10%">
											<Text text="From" />
										</Column>
										<Column
											minScreenWidth="Tablet"
											demandPopin="true"
											hAlign="Left"
											width="10%">
											<Text text="To" />
										</Column>
										<Column
											minScreenWidth="Tablet"
											demandPopin="true"
											hAlign="Left"
											width="20%">
											<Text text="Position Held" />
										</Column>
										<Column hAlign="Left">
											<Text text="Main Responsibilities" />
										</Column>
									</columns>
									<items>
										<ColumnListItem>
											<cells>
												<Input value="{employer}" />
												<DatePicker
														value="{
															path: 'from',
															type: '.type.Date'
															}"
														/>
												<DatePicker
														value="{
															path: 'to',
															type: '.type.Date'
															}"
														/>
												<Input value="{position_held}" />
												<Input value="{main_responsibilities}" />
											</cells>
										</ColumnListItem>
									</items>
								</Table>
							</VBox>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
		</uxap:sections>
		<uxap:sections>
			<uxap:ObjectPageSection
				id="editAssignmentsSection"
				title="Assignments"
				titleUppercase="false">
				<uxap:subSections>
					<uxap:ObjectPageSubSection
						titleUppercase="false"
						mode="Expanded"
						class="editableForm"
						editable="true">
						<uxap:blocks>
							<VBox>
								<Table
									inset="false"
									items="{/assignments}"
									mode="Delete"
									delete="handleDeletePressAssignment">
									<headerToolbar>
										<Toolbar>
											<Title
												text="Assignments"
												level="H2" />
											<ToolbarSpacer />
											<Button
												text="Add Entry"
												press="addRowAssignment" />
										</Toolbar>
									</headerToolbar>
									<columns>
										<Column width="auto" />
									</columns>
									<items>
										<ColumnListItem>
											<cells>
												<VBox>
													<Label text="Title:" />
													<Input value="{title}" />
													<Label />
													<Label text="Description:" />
													<TextArea
														width="100%"
														growing="true"
														value="{description}" />
													<Label />
													<Label text="Role:" />
													<TextArea
														width="100%"
														growing="true"
														value="{role}" />
												</VBox>
											</cells>
										</ColumnListItem>
									</items>
								</Table>
							</VBox>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
		</uxap:sections>
		<uxap:sections>
			<uxap:ObjectPageSection
				id="editReferencesSection"
				title="References"
				titleUppercase="false">
				<uxap:subSections>
					<uxap:ObjectPageSubSection
						titleUppercase="false"
						mode="Expanded"
						class="editableForm"
						editable="true">
						<uxap:blocks>
							<VBox>
								<Table
									inset="false"
									items="{/references}"
									mode="Delete"
									delete="handleDeletePressReferences">
									<headerToolbar>
										<Toolbar>
											<Title
												text="References"
												level="H2" />
											<ToolbarSpacer />
											<Button
												text="Add Entry"
												press="addRowReferences" />
										</Toolbar>
									</headerToolbar>
									<columns>
										<Column width="10%">
											<Text text="First Name" />
										</Column>
										<Column width="10%">
											<Text text="Last Name" />
										</Column>
										<Column width="auto">
											<Text text="Organization" />
										</Column>
										<Column width="20%">
											<Text text="Position" />
										</Column>
										<Column width="10%">
											<Text text="Email" />
										</Column>
										<Column width="10%">
											<Text text="Telephone" />
										</Column>
									</columns>
									<items>
										<ColumnListItem>
											<cells>
												<Input value="{first_name}" />
												<Input value="{last_name}" />
												<Input value="{organization}" />
												<Input value="{position}" />
												<Input value="{email}" />
												<Input value="{telephone}" />
											</cells>
										</ColumnListItem>
									</items>
								</Table>
							</VBox>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
		</uxap:sections>
		<uxap:sections>
			<uxap:ObjectPageSection
				id="editPublicationsSection"
				title="Publications"
				titleUppercase="false">
				<uxap:subSections>
					<uxap:ObjectPageSubSection
						titleUppercase="false"
						mode="Expanded"
						class="editableForm"
						editable="true">
						<uxap:blocks>
							<VBox>
								<Table
									inset="false"
									items="{/publications}"
									mode="Delete"
									delete="handleDeletePressPubliscations">
									<headerToolbar>
										<Toolbar>
											<Title
												text="Publications"
												level="H2" />
											<ToolbarSpacer />
											<Button
												text="Add Entry"
												press="addRowPublications" />
										</Toolbar>
									</headerToolbar>
									<columns>
										<Column width="10%">
											<Text text="Title" />
										</Column>
										<Column width="10%">
											<Text text="Publisher" />
										</Column>
										<Column width="auto">
											<Text text="Description" />
										</Column>
										<Column width="20%">
											<Text text="Year Published" />
										</Column>
									</columns>
									<items>
										<ColumnListItem>
											<cells>
												<Input value="{title}" />
												<Input value="{publisher}" />
												<TextArea
														width="100%"
														growing="true"
														value="{description}" />
												<Input value="{year_published}" />
											</cells>
										</ColumnListItem>
									</items>
								</Table>
							</VBox>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
		</uxap:sections>
	</uxap:ObjectPageLayout>
</core:FragmentDefinition>
