<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:l="sap.ui.layout"
>
  <Table
    class="sapUiNoContentPadding"
    inset="true"
    items="{
      path: '/eois'
      }"
  >
    <layoutData>
      <l:GridData
        span="XL7 L7 M8 S12"
        indent="XL0 L0 M2 S0"
      />
    </layoutData>
    <headerToolbar>
      <OverflowToolbar
        design="Solid"
        height="5rem"
      >
        <content>
          <HBox
            alignItems="Center"
            height="100%"
          >
            <items>
              <l:VerticalLayout>
                <l:content>
                  <Title
                    class="sapUiSmallMarginBeginEnd"
                    text="{i18n>ManageEOIs}"
                    textAlign="Begin"
                    level="H2"
                    titleStyle="H3"
                  />
                  <Text
                    class="sapUiSmallMarginBeginEnd"
                    text="{i18n>ExpressionOfInterest}"
                  />
                </l:content>
              </l:VerticalLayout>
            </items>
          </HBox>
        </content>
      </OverflowToolbar>
    </headerToolbar>
    <columns>
      <Column width="16rem">
        <Label text="Project" />
      </Column>
      <Column>
        <Label text="Deadline" />
      </Column>
      <Column
        minScreenWidth="Large"
        demandPopin="true"
      >
        <Label text="Submitted" />
      </Column>
      <Column
        minScreenWidth="Large"
        demandPopin="true"
      >
        <Label text="Status" />
      </Column>
    </columns>
    <items>
      <ColumnListItem class="sapUiContentPadding">
        <cells>
          <ObjectIdentifier title="{bank_project/project_name}" />
          <Text
            text="{
              path: 'bank_project/deadline_for_submission',
              type: '.type.Date'
              }"
          />
          <Text
            text="{
              path: 'created_at',
              type: '.type.Date'
              }"
          />
          <Text text="{status}" />
        </cells>
      </ColumnListItem>
    </items>
  </Table>
</core:FragmentDefinition>
