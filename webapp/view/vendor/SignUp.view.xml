
<mvc:View
    controllerName="cmsfrontend.controller.vendor.SignUp"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    >
  <Page
      title="{i18n>Vendor} â€” {i18n>SignUp}"
      >
    <content>
      <VBox
          class="center-control"
          justifyContent="Center"
          width="300px"
          >
        <items>
          <f:Form>
            <f:layout>
              <f:ResponsiveGridLayout backgroundDesign="Transparent" />
            </f:layout>
            <f:formContainers>
              <f:FormContainer>
                <f:formElements>
                  <f:FormElement>
                    <f:fields>
                      <Input
                          id="idVendorName"
                          type="Text"
                          value="{/user/vendor_name}"
                          placeholder="{i18n>VendorName}"
                          />
                    </f:fields>
                  </f:FormElement>
                  <f:FormElement>
                    <f:fields>
                      <Input
                          id="idEmail"
                          type="Text"
                          value="{/user/email}"
                          placeholder="{i18n>Email}"
                          />
                    </f:fields>
                  </f:FormElement>
                  <f:FormElement>
                    <f:fields>
                      <Input
                          id="idPassword"
                          type="Password"
                          value="{/user/password}"
                          placeholder="{i18n>Password}"
                          />
                    </f:fields>
                  </f:FormElement>
                  <f:FormElement>
                    <f:fields>
                      <Button
                          type="Default"
                          text="{i18n>Confirm}"
                          press="onPressConfirm"
                          />
                    </f:fields>
                  </f:FormElement>
                </f:formElements>
              </f:FormContainer>
            </f:formContainers>
          </f:Form>
        </items>
      </VBox>
    </content>
  </Page>
</mvc:View>
